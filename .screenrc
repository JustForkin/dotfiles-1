startup_message off
vbell off

# Status
hardstatus on
hardstatus alwayslastline
# hardstatus string "%{=}%-w%{+b w}%n*%t%{-b w}%+w %=%c"
hardstatus string '%{= kG}%-Lw%{= kW}%50> %n*%f %t%{= kG}%+Lw%< %{= kG}%-=%D %m/%d/%y | %C:%s %A | %1`%{-}'

# Color tweaks
attrcolor b ".I" # Allow bold colors 
defbce "on" # Erase background with current bgcolor 
term screen-256color
# termcapinfo xterm*|rxvt*|kterm*|Eterm*|cygwin hs:ts=\E]0;:fs=\007:ds=\E]0;\007
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E38;5;%dm'

