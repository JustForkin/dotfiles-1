#======================================
#     Menu Settings	
#======================================

menu.title.bg: raised
menu.title.bg.color: #{base00}
menu.title.text.color: #{base07}
menu.separator.color: #242424
menu.items.bg: raised
menu.items.bg.color: #{base00}
menu.items.text.color: #{base07}
menu.items.disabled.text.color: #707070
menu.items.active.bg: flat border
menu.items.active.bg.color: #{base02}
menu.items.active.bg.border.color: #{base01}
menu.items.active.text.color: #{base07}

#======================================
#     Focused Window Settings
#======================================

window.active.title.bg: raised
window.active.title.bg.color: #{base01}
window.active.title.bg.border.color: #{base00}
window.active.handle.bg: raised
window.active.handle.bg.color: #{base00}
window.active.grip.bg: parentrelative
window.active.label.bg: parentrelative
window.active.label.text.color: #{base07}
window.*.button.*.bg: parentrelative
window.active.button.*.image.color: #{base07}
window.active.button.*.pressed.image.color: #000000
window.active.button.disabled.image.color: #{base07}

#======================================
#     Unfocused Window Settings
#======================================

window.inactive.title.bg: raised
window.inactive.title.bg.color: #{base00}
window.inactive.handle.bg: raised
window.inactive.handle.bg.color: #{base00}
window.inactive.grip.bg: parentrelative
window.inactive.label.bg: parentrelative
window.inactive.label.text.color: #{base07}
window.inactive.button.*.image.color: #{base07}

#======================================
#     Global Width Settings
#======================================

padding.width: 1
padding.height: 1
border.width: 1
window.handle.width: 3
window.client.padding.width: 0
menu.overlap.x: -5

#======================================
#     Miscellaneous Settings
#======================================

border.color: #000000
menu.border.color: #000000

#======================================
#     Osd		
#======================================

osd.bg: raised
osd.bg.color: #{base00}
osd.hilight.bg: flat border
osd.hilight.bg.color: #{base02}
osd.hilight.bg.border.color: #{base02}

#======================================
#     Title Justification
#======================================

menu.title.text.justify: center
window.label.text.justify: center

# Customizations
window.active.border.color: #{base01}
window.inactive.border.color: #{base01}